package br.edu.infnet.apppedido;

import org.springframework.boot.ApplicationArguments;
import org.springframework.boot.ApplicationRunner;
import org.springframework.core.annotation.Order;
import org.springframework.stereotype.Component;

import br.edu.infnet.apppedido.model.negocio.Pedido;
import br.edu.infnet.apppedido.model.negocio.Solicitante;

@Order(5)
@Component
public class PedidoLoader implements ApplicationRunner {

	@Override
	public void run(ApplicationArguments args) throws Exception {
		
		Solicitante solicitante = new Solicitante("Joaozinho", "123123123123", "joao@joao.com");
		
		Pedido pedido = new Pedido(solicitante);
				
		System.out.println("[Pedido] Inclus√£o realizada com sucesso: " + pedido);
	}
}